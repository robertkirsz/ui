{
  "name": "@robertkirsz/ui",
  "version": "0.9.0",
  "description": "UI components library that I use in my React apps",
  "author": "Robert Kirsz <robert.kirsz@gmail.com> (https://robertkirsz.com)",
  "license": "GPL-3.0-or-later",
  "homepage": "https://robertkirsz.github.io/ui",
  "bugs": {
    "url": "https://github.com/robertkirsz/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertkirsz/ui.git"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.ts --configPlugin typescript",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "predeploy": "yarn build-storybook",
    "deploy": "gh-pages -d storybook-static",
    "postdeploy": "rm -rf storybook-static",
    "prepublish": "yarn build",
    "postpublish": "rm -rf dist",
    "test": "jest",
    "prettier": "prettier . --check --write --ignore-path .gitignore"
  },
  "keywords": [
    "components-library",
    "react",
    "styled-components"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-typescript": "8.3.0",
    "@storybook/addon-actions": "6.4.9",
    "@storybook/addon-essentials": "6.4.9",
    "@storybook/addon-links": "6.4.9",
    "@storybook/react": "6.4.9",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/testing-library__react": "10.2.0",
    "babel-loader": "8.2.3",
    "gh-pages": "3.2.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.3",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.61.0",
    "rollup-plugin-styles": "3.14.1",
    "rollup-plugin-typescript2": "0.31.1",
    "rollup-plugin-visualizer": "5.5.2",
    "storybook-css-modules-preset": "1.1.1",
    "styled-components": "5.3.3",
    "ts-jest": "27.1.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "arrowParens": "avoid",
    "printWidth": 100
